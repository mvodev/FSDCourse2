include ../button/button.pug
include ../text-field/text-field.pug
include ../toggle/toggle.pug
mixin signin(options)
  form(class='sign-in' action=options.action)
    div(class='sign-in__wrapper')
      h2(class="sign-in__header")='Войти'
      .sign-in__text-wrapper
        +textfield({isDefault:true,placeholder:'Email',type:"email"})
        +textfield({isDefault:true,placeholder:'Пароль',type:"password"})
      +button({label:'Войти',type:'arrow',purpose:'submit'})
      footer(class='sign-in__footer')
        span(class='sign-in__account')='Нет аккаунта на Toxin?'
        +button({label:'Создать',type:'link',href:'./registration.html',})
