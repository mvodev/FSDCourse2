doctype html
html(lang='en')
  head
    meta(charset="utf-8")
    meta(name="description" content=description)
    title=pageTitle
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    include ../../favicon/favicon.pug

    include ./headers/header.pug
    +header({type:'nav',links:[
      { text: 'О нас' ,isActive: true },
      { text: 'Услуги', isExpandable: true },
      { text: 'Вакансии'  },
      { text: 'Новости' },
      { text: 'Соглашения', isExpandable: true },]})
    
    block content
    
    include ./footers/footer.pug
    +footer({type:'widget'})
    +footer({type:'copyright'})